{
	"name": "autotool",
	"description": "Workspace transformation orchestrator",
	"version": "0.1.0",
	"license": "MIT",
	"private": false,
	"archetype": {
		"platform": "node",
		"language": "ts",
		"kind": "lib",
		"disabledPlugins": [
			"@alexaegis/autolib-plugin-ts"
		]
	},
	"keywords": [
		"autotool",
		"managed-by-autotool"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"lint:format_": "prettier --no-plugin-search --cache-location .cache/prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"lint:md_": "remark --frail --no-stdout --silently-ignore .",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"lint:tsc_": "tsc --noEmit",
		"publint": "turbo run publint_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"publint_": "publint dist",
		"all": "turbo run all_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"format": "turbo run format_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"format_": "prettier --no-plugin-search --cache-location .cache/prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter autotool",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./readme": "./readme.md"
	},
	"bin": {
		"autotool": "./shims/autotool.js",
		"autotool-postinstall": "./shims/postinstall.js"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "^0.3.1",
		"@alexaegis/common": "^0.3.1",
		"@alexaegis/fs": "^0.3.1",
		"@alexaegis/logging": "^0.3.1",
		"@alexaegis/match": "^0.3.1",
		"@alexaegis/workspace-tools": "^0.3.1",
		"autotool-plugin": "^0.1.0",
		"autotool-plugin-default": "^0.1.0",
		"globby": "^13.2.0",
		"microdiff": "^1.3.2"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.3.3",
		"@alexaegis/ts": "^0.3.3",
		"@alexaegis/vite": "^0.3.3",
		"@alexaegis/vitest": "^0.3.3",
		"@types/node": "^20.3.2",
		"@types/yargs": "17.0.24",
		"publint": "^0.1.13",
		"typescript": "^5.1.6",
		"vite": "^4.3.9",
		"vitest": "^0.32.2"
	}
}
